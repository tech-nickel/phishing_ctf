      <!-- =START= LEFT --> \
      (bg: (rgb: 248, 250, 255))+(box:"X", $col0_height)[\
            <!-- ===START= The box with NEW MES --> (bg: $red)+(box:"X", $col1_height)[\
                =><=
                
                (colour: white)[<span class="material-symbols-outlined">edit</span> New Message ]\
            <!-- ===END= The box with NEW MES --> ]\
            <!-- ===START= The box with the ITEMS --> (box:"X", 20)[\
            <!-- ===START= LEFT  -->
              ==|||
              <!-- ====START= FOR LOOP --> (for: each _item, ...$menuitems)[\
                (text-indent: 40)+(hover-style:(text-style: "bold"))[_item]
              
              ]\
            <!-- ===END= LEFT  -->
            <!-- ===START= RIGHT  -->
              =|
              {(live: 0.5s)[
                ''0$unread_mails''
              ]}\
            ]\
          ]\
          <!-- ===END= RIGHT  -->
      <!-- =END= LEFT  --> \
      =|| 
      <!-- =START= CENTER --> \
        <!-- ==START= BOX CENTER --> (bg: $bluegrey2)+(box:"X", $col0_height)[\
        <!-- ===START= The box with search Icon  --> (bg: $bluegrey2)+(box:"X", $col1_height)[
        <!-- =====START= LEFT --> \
        ==|||||
        <!--======END= LEFT --> (text-indent: 40)[Search]\
        |= 
        <!-- =====START= CENTER --> \
        <span class="material-symbols-outlined">search</span> \
        <!-- ===END= The box with search Icon  -->]\
               <!-- =START= Box for first Email --> (bg: white)+(box:"X", 10)[\
              |=
              =><=
              =|||||||=
              
              (text-style: "bold")(print: $emailfroms's (1))
              (text-size: 0.7)(print: $emailheads's (1))
              (text-size: 0.6)(print: $emailbodies's (1))
              =|
              
              <!-- =END= CENTER -->\
              <!-- =END= Box for first Email -->]\
            <!-- =START= The FOR Loop --> (for: each _i, ...(range:2,5))[\
              <!-- ==START= The Boxes for other Email -->(box:"X", 10)[\
              |=
              =><=
              =|||||||=

                (print: $emailfroms's (_i))
                (text-size: 0.7)(print: $emailheads's (_i))
                (text-size: 0.6)(print: $emailbodies's (_i))
              =|
              <!-- ==END= The Boxes for other Email -->]\
            <!-- =END= The FOR Loop -->]\
          <!-- ==END= BOX CENTER -->]\
        <!-- =END= CENTER --> \
          =||||
        <!-- =START= RIGHT --> \
        <!-- =START= BOX RIGHT --> (bg: white)+(box:"X", $col0_height)[\
